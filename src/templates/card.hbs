<div class="card">
    <div class="info">
        <p class="info-item">
            <i class="material-icons">City:</i>
            {{location.name}}
        </p>
        <p class="info-item">
            <i class="material-icons">Country:</i>
            {{location.country}}
        </p>
        <p class="info-item">
            <i>Region:</i>
            {{location.region}}
        </p>
        <p class="info-item">
            <i class="material-icons">Temperature:</i>
            {{current.temp_c}}
        </p>
        <p class="info-item">
            <i class="material-icons">Cloudiness:</i>
            {{current.condition.text}}
        </p>
        <img src={{current.condition.icon}} class="info-item">
        </img>
        <p>
        <i class="material-icons">Wind degree:</i>
            {{current.wind_degree}}
        </p>
        <p>
        <i class="material-icons">Wind speed:</i>
            {{current.wind_mph}}
        </p>
        <p>
        <i class="material-icons">Wind direction:</i>
            {{current.wind_dir}}
        </p>

        <p class="info-item">
            <i class="material-icons">Local time:</i>
            {{location.localtime}}
        </p>
        <p class="info-item">
            <i class="material-icons">Time zone:</i>
            {{location.tz_id}}
        </p>
    </div>
</div>
